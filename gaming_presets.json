      },
      "notes": "MOBA games don't require ultra-high FPS"
    },

    "minecraft": {
      "name": "Minecraft",
      "parent": "casual_gaming",
      "overrides": {
        "fps": 30,
        "quality": 70,
        "window_title": "Minecraft"
      },
      "notes": "Balanced settings for building and exploration"
    },

    "valorant": {
      "name": "Valorant",
      "parent": "competitive_gaming",
      "overrides": {
        "fps": 60,
        "quality": 50,
        "window_title": "VALORANT"
      },
      "notes": "Tactical shooter requiring high FPS"
    },

    "fortnite": {
      "name": "Fortnite",
      "parent": "competitive_gaming",
      "overrides": {
        "fps": 60,
        "quality": 50,
        "window_title": "Fortnite"
      },
      "notes": "Battle royale with fast building mechanics"
    },

    "dota2": {
      "name": "Dota 2",
      "parent": "competitive_gaming",
      "overrides": {
        "fps": 30,
        "quality": 65,
        "window_title": "Dota 2"
      },
      "notes": "MOBA with detailed graphics"
    }
  },

  "usage_guide": {
    "loading_presets": "Use the preset name with enable_gaming_mode() MCP tool",
    "examples": [
      "enable_gaming_mode(mode='performance')",
      "Use 'competitive_gaming' preset for FPS games",
      "Use 'casual_gaming' preset for turn-based games",
      "Use 'esports' preset for professional play"
    ],
    "customization": "Override individual settings using enable_gaming_mode() parameters",
    "window_capture": "Use find_game_window() and capture_game_window() for region optimization"
  },

  "performance_tips": {
    "windows": [
      "Install pywin32 for window capture optimization",
      "Use DXGI/WGC backends for GPU-accelerated capture",
      "Close background applications to reduce CPU usage",
      "Use window capture instead of full screen when possible"
    ],
    "general": [
      "Enable adaptive quality for automatic optimization",
      "Use JPEG format for better performance (vs PNG)",
      "Lower quality setting if experiencing frame drops",
      "Monitor performance with get_gaming_metrics() tool",
      "Use frame skipping to maintain stable FPS"
    ],
    "network": [
      "Use WebSocket endpoint (/mcp/game-stream) for lowest latency",
      "Enable frame skipping to prevent latency accumulation",
      "Monitor metrics endpoint to track performance"
    ]
  }
}
